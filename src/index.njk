---
layout: layouts/base.njk
---

<main>
  <article>
  {% for post in collections.posts | head(-1) %}
    <p>Latest</p>
    {%  include "posthead.njk" %}
    {{ post.templateContent | safe }}
  {% endfor %}
  </article>
</main>
<footer>
  <nav>
    <ol reversed>
    {% for post in collections.posts | reverse %}
      {% if loop.index > 1 %}
      <li>
        <a href="{{ post.url }}">
          {% if post.data.title %}
            {{ post.data.title }}
          {% else %}
            <code>
              {{ post.url }}
            </code>
          {% endif %}
        </a>
        <time datetime="{{ post.date | htmlDateString }}">
          {{ post.date | readableDate("LLLL yyyy") }}
        </time>
      </li>
      {%  endif %}
    {% endfor %}
    </ol>
  </nav>
</footer>
